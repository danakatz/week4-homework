<style>
  label { width: 100px; vertical-align: middle;}
</style>

<h2>Edit a Place</h2>

<%= form_tag place_url(@place.id), :method => :patch do %>
  <p><label for="title">Title:</label> <input value="<%= @place.title %>" name="title" id="title"size="30"></p>
  <p><label for="url">Photo URL:</label> <input value="<%= @place.photo_url %>" name="url" id="url" size="80"></p>
  <p><label for="price">Price:</label> <input name="price" id="price" value="<%= @place.price / 100.0 %>"></p>
  <p><label for="desc">Description:</label></p>
  <textarea name="desc" id="desc" cols="80" rows="3"><%= @place.desc %></textarea>
  <p><button>Submit</button></p>
<% end %>
